# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your actual .env file to version control
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012

# =============================================================================
# GOOGLE AI / GEMINI CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# =============================================================================
# EMAILJS CONFIGURATION
# =============================================================================
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID_CLIENT=your_emailjs_template_id_client
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# BUSINESS CONTACT INFORMATION
# =============================================================================
BUSINESS_WA_PHONE_NUMBER=972501234567
BUSINESS_EMAIL=contact@yourdomain.com
BUSINESS_PHONE=+972-50-123-4567

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
SESSION_SECRET=your_super_secret_session_key_here_min_32_characters
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LEAD_SUBMISSION_RATE_LIMIT_WINDOW_MS=60000
LEAD_SUBMISSION_RATE_LIMIT_MAX=5

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=info
DETAILED_ERROR_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
GA_TRACKING_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=0.0.0.0
DEV_SOURCE_MAPS=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ANALYSIS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_TELEGRAM_INTEGRATION=true
FEATURE_SMS_NOTIFICATIONS=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in your project root
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit your .env file to version control
# 4. Use different values for development, staging, and production
# 5. Use environment-specific .env files (.env.development, .env.production, etc.)
# 6. Regularly rotate your secrets and API keys
# 7. Consider using a secrets manager in production
# 8. Enable 2FA on all services where possible